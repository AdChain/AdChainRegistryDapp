files:
  "/etc/default/docker":
    mode: "000444"
    content: |
      DOCKER_OPTS="--no-cache --force-rm"
  "/etc/nginx/conf.d/proxy.conf" :
    mode: "000755"
    owner: root
    group: root
    content: |
      client_max_body_size 20M;

     if ($http_x_forwarded_proto != 'https') {
          rewrite ^(.*) https://$host$1 redirect;
     }
